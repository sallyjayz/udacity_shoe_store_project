<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoeStore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ShoeStore.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ShoeStore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ShoeStore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewStyle" parent="Theme.ShoeStore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/thirtysp</item>
        <item name="android:layout_marginBottom">@dimen/thirtydp</item>
    </style>

    <style name="TextInputLayout" parent="Theme.ShoeStore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconTint">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/twentysp</item>
        <item name="android:layout_margin">@dimen/tendp</item>
    </style>

    <style name="TextInputLayoutEdit" parent="Theme.ShoeStore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/backgroundColor</item>
        <item name="android:textSize">@dimen/twentysp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="elevation">@dimen/thirtydp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:paddingTop">@dimen/tendp</item>
        <item name="android:paddingBottom">@dimen/tendp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/twentysp</item>
        <item name="android:layout_marginTop">@dimen/fortydp</item>
        <item name="android:layout_marginLeft">@dimen/tendp</item>
        <item name="android:layout_marginRight">@dimen/tendp</item>
    </style>
</resources>