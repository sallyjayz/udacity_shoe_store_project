<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.WelcomeFragment">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/welcomeTextViewOne"
            style="@style/TextViewStyle"
            android:text="@string/happy_feet"
            android:padding="@dimen/tendp"
            android:layout_marginBottom="@dimen/fortydp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/welcomeButton"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/welcomeTextViewTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/twentysp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="@dimen/thirtydp"
            android:text="@string/our_store_provides_the_best_affordable_shoes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeTextViewOne"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/welcomeButton"
            style="@style/Widget.App.Button"
            android:text="NEXT ðŸ‘‰"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/fortydp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>